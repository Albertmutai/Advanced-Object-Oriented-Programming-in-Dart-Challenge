
class Student {
  String name;
  int age;
  String grade;

    Student(this.name, this.age, this.grade);
  
  //Display student information
  void displayInfo() {
    print('Student name is: $name');
    print('Age: $age');
    print('Grade: $grade');
  }
}

//Teacher class
class Teacher {
  String name;
  int age;
  String subject;

  Teacher(this.name, this.age, this.subject);

    void displayInfo() {
    print('Teachers Name is: $name');
    print('Age: $age');
    print('Subject: $subject');
  }
}

void main() {
    var student1 = Student('Albert', 38, '4th');
  var teacher1 = Teacher('Mr. Allan', 35, 'Dart');

  
  print('Student Information:');
  student1.displayInfo();

  print('\nTeacher Information:');
  teacher1.displayInfo();
}
